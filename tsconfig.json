{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "types"
    ]
  }
}
