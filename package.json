{
  "name": "@unmock/micro-jaymock",
  "version": "1.0.0",
  "description": "Tiny API mocking microservice, using jaymock.",
  "main": "index.ts",
  "scripts": {
    "dev": "micro-dev local/index.ts",
    "test": "xo && tsc && ava",
    "coverage": "nyc npm test",
    "coverage:upload": "nyc report --reporter=lcov && codecov",
    "coverage:check": "nyc report && nyc check-coverage --lines 90 --functions 90 --branches 85"
  },
  "files": [
    "index.ts"
  ],
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "rules": {
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/return-await": "off",
      "new-cap": ["error", { "newIsCap": false }]
    },
    "ignores": [
      "*.js",
      "*.d.ts",
      "*/*.d.ts",
      "*/*/*.d.ts"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unmock/jaymock-microservice.git"
  },
  "author": "unmock",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unmock/jaymock-microservice/issues"
  },
  "homepage": "https://github.com/unmock/jaymock-microservice#readme",
  "dependencies": {
    "@unmock/jaymock": "^1.0.8",
    "chance": "^1.1.3",
    "micro": "^9.3.4",
    "serve-marked": "^2.0.2"
  },
  "devDependencies": {
    "@types/micro": "^7.3.3",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "eslint-config-xo-typescript": "^0.23.0",
    "freddo": "^1.1.2",
    "got": "^10.0.2",
    "micro-dev": "^3.0.0",
    "nyc": "^14.1.1",
    "test-listen": "^1.1.0",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2",
    "xo": "^0.25.3"
  }
}
